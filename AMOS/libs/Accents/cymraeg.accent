$N[Y]RS$ = AX

$[Y](cons*)(vowel) = AX
$(cons)[Y](cons*)(vowel) = AX

[Y](cons*)(vowel)(cons*)$ = IY
[Y](short) = IH
[Y](cons)(cons+) = IH
[Y](nlr) = IH

[Y] = IY


$[I]$ = IY4
[I](cons*)(vowel)(cons*)$ = IY
