[EW] = EHUW

[IW] = YUW
[UW] = YUW
[YW] = YUW

[OI] = OY
[OE] = OY

[OW] = OW

[YW] = AW

[WY] = WIY

# A

$[A]$ = AH
[A](cons*)(vowel)(cons*)$ = AA

[A](cons+)(vowel) = AH
[A](short) = AH
[A](cons)(cons+) = AH
[A](nlr) = AH

[Â] = AA
[A] = AA

$[E]$ = EH
[E](cons*)(vowel)(cons*)$ = EY
[E](short) = EH
[E](cons)(cons+) = EH
$(cons)[E](cons)$ = EY
[E](nlr) = EH

[Ê] = EY
[E] = EY

$[O]$ = AO
[O](cons*)(vowel)(cons*)$ = OH
[O](short) = AO
[O](cons)(cons+) = AO
[O](nlr) = AO

[Ô] = OH
[O] = OH


[GWL] = GUWL

# UW is wrong.

$[W]$ = UH
[W](cons*)(vowel)(cons*)$ = UW
[W](short) = UH
[W](cons)(cons+) = UH
$(cons)[W](cons)$ = UW
[W](nlr) = UH

[W] = UW


$[Y]$ = AX
$[Y]R$ = AX
